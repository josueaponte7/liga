{% extends 'base.html.twig' %}

{% block title %}Actualizar Posicion!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
    <form class="form-horizontal" id="formUpdate" name="formUpdate" action="{{ path('posicion_update', { id: posicion.id } ) }}" method="POST" enctype="multipart/form-data">
        <div class="form-row">
            <div class="col-12 col-md-6 mb-3">
                <label ><b>Posici√≥n</b></label>
                <input class="form-control " type="text" id="nombre" name="nombre" value="{{ posicion.nombre }}" placeholder="Ingrese Nombre" maxlength="80" />
            </div>
        </div>
        <div class="form-group text-center" style="padding-top: 20px">
            <button class="btn btn-secondary" type="submit">Actualizar</button>
        </div>
    </form>
    
</div>
{% endblock %}
